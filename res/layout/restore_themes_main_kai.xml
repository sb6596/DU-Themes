<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center|top">

                    <ImageView
                        android:id="@+id/wp_bg_main_kai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qs_bg_main_kai"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center|top">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:id="@+id/qs_accent_main_kai_wifi"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/qs_tile_main_kai_wifi_active"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_themes_kai_wifi"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:id="@+id/qs_tile_main_kai_bg_bluetooth_inactive"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/qs_tile_main_kai_icon_bluetooth_inactive"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_themes_kai_bluetooth"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:id="@+id/qs_accent_main_kai_dnd"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/qs_tile_main_kai_dnd_active"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_themes_kai_dnd"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:id="@+id/qs_tile_main_kai_bg_flashlight_inactive"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/qs_tile_main_kai_icon_flashlight_inactive"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_themes_kai_flashlight"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:id="@+id/qs_accent_main_kai_autorotate"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/qs_tile_main_kai_autorotate_active"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_themes_kai_autorotate"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/qs_tile_main_kai_bg_battery_saver_inactive"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/qs_tile_main_kai_icon_battery_saver_inactive"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_themes_kai_battery_saver"
                            tools:ignore="ContentDescription" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="65dp">

                    <View
                        android:id="@+id/ic_themes_qs_spacer_main_kai"
                        android:layout_width="22dp"
                        android:layout_height="3.5dp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center">

                    <ImageView
                        android:id="@+id/themes_navbar_style_main_kai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp" />

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/theme_main_kai_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/RestoreThemeNameStyle" />

</LinearLayout>

